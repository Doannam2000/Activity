<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_30dp"
    app:cardCornerRadius="@dimen/dimen_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#879EEF"
            android:gravity="center"
            android:paddingVertical="@dimen/dimen_20dp"
            android:text="Do you want to exit the appliaction ?"
            android:textColor="#000"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_marginVertical="@dimen/dimen_20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/exit"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Exit"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>